<div class="row">
   {{#each notes}}
   <div class="col-md-3">
       <div class="card">
           <div class="card-body">
               <h4 class="card-title justify-content-between align-items-center">
                   {{title}} <a href="/notes/edit/{{id}}"><i class="fas fa-edit"></i></a>
                   </h4>
               <p>
                   {{description}}
               </p>


               
               <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
               
               <input type="hidden" name="_method" value="DELETE">
                   <button class="btn btn-danger btn-danger btn-sm" type="submit">Eliminar

                   </button>
           
               
               </form>
               
           
           
           
           </div>
       </div>
   </div>
   {{else}}
   <div class="card mx-auto">
       <div class="card-body">
           <h1>Hola! {{user.name}}</h1>
           <p class="lead">No hay notas aun</p>
           <a href="/notes/add" class="btn btn-succes btn-block">Crear una</a>
       </div>
   </div>
   {{/each}} 
</div>